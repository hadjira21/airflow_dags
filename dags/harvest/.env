# ======================================
# Airflow & API Configuration
# ======================================

# AtmoSud API Settings
API_URL="https://opendata.atmosud.org/api/v1/"
API_ENDPOINT="mesures"
API_PAGE_SIZE=10000  # Max records per API call
API_START_DATE="2023-01-01"  # Filter data from this date (YYYY-MM-DD)

# ======================================
# Snowflake Configuration
# ======================================

# Connection
SNOWFLAKE_CONN_ID="snowflake_conn"
SNOWFLAKE_ACCOUNT="<your_account>.snowflakecomputing.com"
SNOWFLAKE_USER="<your_username>"
SNOWFLAKE_PASSWORD="<your_password>"
SNOWFLAKE_REGION="<your_region>"

# Database Objects
SNOWFLAKE_DATABASE="BRONZE"
SNOWFLAKE_SCHEMA="ATMOSUD"
SNOWFLAKE_TABLE="ATMOSUD_DATA"
SNOWFLAKE_STAGE="ATMOSUD_STAGE"
SNOWFLAKE_WAREHOUSE="COMPUTE_WH"  # Default warehouse

# ======================================
# Airflow Specific
# ======================================
AIRFLOW__CORE__ENABLE_XCOM_PICKLING="True"  # Required for large data passing